{
	"compilerOptions": {
		"lib": ["esnext"],
		"module": "nodenext",
		"esModuleInterop": true,
		"rootDir": "./",
		"sourceMap": false,
		"strict": true,
		"target": "ES2020",
		"typeRoots": [
			"./@types",
			"./node_modules/@ts-defold/types",
			"./node_modules/@typescript-to-lua/language-extensions"
		]
	},
	"include": ["./@types/*.d.ts"],
	"exclude": ["./node_modules/*"]
}
